---
import { Image } from 'astro:assets';
import logo from '../assets/green-adda-logo.webp';
---
<header class="sticky top-0 z-50 w-full border-b border-zinc-200 bg-white/80 backdrop-blur-md dark:border-zinc-800 dark:bg-zinc-950/80">
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <a href="/" class="flex items-center gap-2">
      <Image
        src={logo}
        alt="greenadda logo"
        class="h-8 w-auto origin-center"
        loading="eager"
        fetchpriority="high"
      />
      <span class="text-2xl font-bold tracking-tighter text-zinc-900 dark:text-zinc-100">
        greenadda
      </span>
    </a>
    <nav class="hidden md:flex items-center gap-8">
      <a href="#education" class="text-sm font-medium text-zinc-600 transition-colors hover:text-cyan-600 dark:text-zinc-400 dark:hover:text-cyan-400">
        Education
      </a>
      <a href="#services" class="text-sm font-medium text-zinc-600 transition-colors hover:text-cyan-600 dark:text-zinc-400 dark:hover:text-cyan-400">
        Services
      </a>
      <a href="#commitment" class="text-sm font-medium text-zinc-600 transition-colors hover:text-cyan-600 dark:text-zinc-400 dark:hover:text-cyan-400">
        Sustainability
      </a>
    </nav>
    <div class="flex items-center gap-4">

        <a href="mailto:greenaddainfo@gmail.com" class="inline-flex h-9 items-center justify-center rounded-md bg-gradient-to-r from-lime-600 to-cyan-600 px-4 py-2 text-sm font-medium text-white shadow focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-cyan-600 disabled:pointer-events-none disabled:opacity-50 hover:from-lime-500 hover:to-cyan-500 transition-transform duration-300 hover:scale-105">
            Join Us
        </a>
    </div>
  </div>
</header>
