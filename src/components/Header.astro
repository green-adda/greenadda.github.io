---
import { Image } from 'astro:assets';
import logo from '../assets/green-adda-logo.webp';
---
<header class="sticky top-0 z-50 w-full border-b border-zinc-200 bg-white/80 backdrop-blur-md dark:border-zinc-800 dark:bg-zinc-950/80">
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8 relative">
    <a href="/" class="flex items-center gap-2">
      <Image src={logo} alt="greenadda logo" class="h-8 w-auto" loading="eager" />
      <span class="text-2xl tracking-tighter">
        <span class="font-bold text-lime-700 dark:text-lime-500">green</span><span class="font-normal text-zinc-900 dark:text-zinc-100">adda</span>
      </span>
    </a>
    <nav class="hidden md:flex items-center gap-8 absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
      <a href="#education" class="text-sm font-medium text-zinc-600 transition-colors hover:text-cyan-600 dark:text-zinc-400 dark:hover:text-cyan-400">
        Education
      </a>
      <a href="#services" class="text-sm font-medium text-zinc-600 transition-colors hover:text-cyan-600 dark:text-zinc-400 dark:hover:text-cyan-400">
        Services
      </a>
      <a href="#commitment" class="text-sm font-medium text-zinc-600 transition-colors hover:text-cyan-600 dark:text-zinc-400 dark:hover:text-cyan-400">
        Sustainability
      </a>

    </nav>
    <div class="flex items-center gap-4">
        <a href="mailto:greenaddainfo@gmail.com" class="rounded-full bg-lime-700 p-2 text-white shadow-sm hover:bg-lime-800 dark:bg-lime-500 dark:text-zinc-900 dark:hover:bg-lime-400 transition-colors" aria-label="Connect via Email">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
              <path d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z" />
              <path d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z" />
            </svg>
        </a>
    </div>
  </div>
</header>
